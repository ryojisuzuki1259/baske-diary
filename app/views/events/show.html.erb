<p id="notice"><%= notice %></p>

<p>
  <strong>タイトル:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>内容:</strong>
  <%= @event.body %>
</p>

<p>
  <strong>開始日時:</strong>
  <%= @event.start_date.strftime("%Y-%m-%d %H:%M") %>
</p>

<p>
  <strong>終了日時:</strong>
  <%= @event.end_date.strftime("%Y-%m-%d %H:%M") %>
</p>

<%= link_to '編集する', edit_event_path(@event) %> |
<%= link_to '削除する', event_path(@event), method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %> |
<%= link_to 'マイページに戻る', user_path(@user) %>
