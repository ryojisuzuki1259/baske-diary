<div class="container center">

  <h2>イベント編集</h2>

  <%= render 'form', event: @event %>

  <div class="event-edit-content">
    <%= link_to @event do %>
      <div><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span> イベント詳細　</div>
    <% end %>

    <%= link_to user_path(@user), class:"back-home" do %>
      <div><span class="glyphicon glyphicon-home" aria-hidden="true"></span> マイページに戻る</div>
    <% end %>
  </div>
</div>