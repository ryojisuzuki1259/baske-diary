<p id="notice"><%= notice %></p>

<div>イベント一覧</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.body %></td>
        <td><%= event.start_date.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= event.end_date.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to '詳細 |', event %></td>
        <td><%= link_to '編集 |', edit_event_path(event) %></td>
        <td><%= link_to '削除', event, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'マイページに戻る', user_path(@user) %>

