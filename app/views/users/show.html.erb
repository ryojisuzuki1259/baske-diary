<% if user_signed_in? %>
  <ul id="tabs">
    <li><a href="#mypage" class="active">マイページ</a></li>
    <li><a href="#diary" class="">ダイアリー</a></li>
    <li><a href="#skill" class="">スキル</a></li>
    <li><a href="#event" class="">カレンダー</a></li>
  </ul>
<% end %>

<div id="tab-contents">
  <div id="mypage" class="tab">
    <div>
      <div>名前</div>
      <div>所属団体</div>
      <div>活動エリア</div>
      <div>自己紹介</div>
    </div>
    <div>
      <div><%= @user.name %></div>
      <div><%= @user.group %></div>
      <div><%= @user.prefecture %></div>
      <div><%= @user.introduction %></div>
    </div>
  </div>

  <div id = "diary" class="tab">
    <%= render "users/diary", user: @user, diaries: @diaries %>
  </div>

  <div id = "skill" class="tab">
    <%= render "users/skill", user: @user, skill: @skill, skills: @skills %>
  </div>
</div>

<script>
  $('#tab-contents .tab[id != "mypage"]').hide();

  $('#tabs a').on('click', function(event) {
  $("#tab-contents .tab").hide();
  $("#tabs .active").removeClass("active");
  $(this).addClass("active");
  $($(this).attr("href")).show();
  event.preventDefault();
  });
</script>