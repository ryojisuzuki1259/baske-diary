<% if user == current_user %>
  <%= form_with model:skill, url:skills_path(skill), local:true do |f| %>
    <%= f.label :"習得したいスキル"%>
    <%= f.text_field :name, placeholder: "こちらに入力"%>
    <%= f.submit "登録する" %>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>番号</th>
      <th>スキル名</th>
      <th>習得度</th>
    </tr>
  </thead>
  <tbody>
  <% skills.each do |skill| %>
    <tr>
      <td></td>
      <td><%= skill.name %></td>
      <td><%= skill.level %> %</td>
      <td>
        <% if skill.user == current_user %>
          <%= link_to "編集", edit_skill_path(skill)%>
        <% end %>
      </td>
      <td>
        <% if skill.user == current_user %>
          <%= link_to "削除", skill_path(skill), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}%>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>