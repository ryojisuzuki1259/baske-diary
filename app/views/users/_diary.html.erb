<div class="container">
    <% if user == current_user %>
      <%= link_to "新規登録", new_diary_path, class:"btn" %>
    <% end %>
    <table class="table">
      <thead>
        <tr>
          <th>タイトル</th>
          <th>投稿日</th>
          <th>内容</th>
        </tr>
      </thead>
      <tbody>
        <% diaries.each do |diary| %>
        <tr>
          <td><%= link_to diary.title, diary_path(diary) %></td>
          <td><%= diary.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= diary.body %></td>
          <td class="favorite-btn<%= diary.id %> "><%= render "favorites/favorite-btn", diary: diary %></td> <!--クラス名にdiaryのidを入れている-->
          <td>
            <% if user == current_user %>
              <%= link_to "編集", edit_diary_path(diary), class:"btn" %>
            <% end %>
          </td>
          <td>
            <% if user == current_user %>
              <%= link_to "削除", diary_path(diary), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class:"btn" %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>