<div class="container">
  <div class="diary-btn-box">
    <% if user == current_user %>
      <button id="diary-open-btn" class="diary-btn btn">ダイアリー新規登録</button>
    <% end %>
  </div>

  <% if diary.errors.any? %>
    <div id="error_explanation">
      <h2><%= diary.errors.count %> 件のエラーが発生:</h2>

      <ul>
      <% diary.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= render "diaries/new", diary: @diary %>

  <script> //入力欄が隠れており、ボタンを押すと出てくるコード(スライドトグル)
    $('#diary-new').hide();

    $('#diary-open-btn').click(function() {
        $('#diary-new').slideToggle();
    })
  </script>

  <div class="diary-show">
    <% diaries.each do |diary| %>
      <div class="diary-box">
        <h4><%= link_to diary.title, diary_path(diary), :style=>"color:white;" %></h4>
        <div class="diary-box-body"><%= diary.body %></div>
        <div class="diary-box-link">
          <div><%= diary.created_at.strftime("%Y-%m-%d %H:%M") %></div>
          <div class="favorite-btn<%= diary.id %>">
            <% if user != current_user %>
              <%= render "favorites/favorite-btn", diary: diary %>
            <% else %>
              いいね<%= diary.favorites.count %>
            <% end %>
          </div>
          <div>コメント<%= diary.diary_comments.count %>件</div>
          <div>
            <% if user == current_user %>
              <%= link_to edit_diary_path(diary) do %>
                <div><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> 編集</div>
              <% end %>
            <% end %>
          </div>
          <div>
            <% if user == current_user %>
              <%= link_to diary_path(diary), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} do %>
                <div><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span> 削除</div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>