<div class="container">
  <div class="diary-btn-box">
    <% if user == current_user %>
      <button id="diary-open-btn" class="diary-btn btn">ダイアリー新規登録</button>
    <% end %>
  </div>

  <div id="diary_error_explanation">
    <%= render "diaries/errors", diary: diary %>
  </div>

  <%= render "diaries/new", diary: @diary %>

  <script> //入力欄が隠れており、ボタンを押すと出てくるコード(スライドトグル)
    $('#diary-new').hide();

    $('#diary-open-btn').click(function() {
        $('#diary-new').slideToggle();
    })
  </script>

  <div class="diary-show" id="diary-index-btn">
    <%= render "diaries/diary_index", user: user, diaries: diaries %>
  </div>
</div>