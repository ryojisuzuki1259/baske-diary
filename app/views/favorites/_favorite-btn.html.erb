<% if diary.favorited_by?(current_user) %>
  <%= link_to diary_favorites_path(diary), method: :delete, remote: true do %>
    <div class="favorite-btn">いいね<div class="favorite-count"><%= diary.favorites.count %></div></div>
  <% end %>
<% else %>
  <%= link_to diary_favorites_path(diary), method: :post, remote: true do %>
    <div class="favorite-btn">いいね<div class="favorite-count-none"><%= diary.favorites.count %></div></div>
  <% end %>
<% end %>

<!--非同期にするためlink_toにremote: trueを追加-->