<div class="container center">

<h2>プロフィール編集 <%#= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="input-form">
  <div class="field">
    <%= f.label :current_password, "現在のパスワード", class:"field-box" %> <i><strong>( 入力必須 )</strong></i><br />
    <%= f.label :name, "名前", class:"field-box" %><br />
    <%= f.label :email, "メールアドレス", class:"field-box" %><br />
    <%= f.label :password, "パスワード", class:"field-box" %> <i><strong>( パスワードを変更しない場合は空欄 )</strong></i><br />
    <%= f.label :password_confirmation, "パスワード再入力", class:"field-box" %><br />
    <%= f.label :group, "所属団体（任意）", class:"field-box" %><br />
    <%= f.label :prefecture, "活動エリア（都道府県、任意）", class:"field-box" %><br />
    <%= f.label :introduction, "自己紹介文（任意）", class:"field-box" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.password_field :current_password, autocomplete: "current-password", class:"field-body" %><br />
    <%= f.text_field :name, class:"field-body" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field-body" %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"field-body" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> 文字以上</em><br />
    <% end %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"field-body" %><br />
    <%= f.text_field :group, class:"field-body" %><br />
    <%= f.text_field :prefecture, class:"field-body" %><br />
    <%= f.text_area :introduction, class:"field-body", size: "40x10" %>
  </div>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class:"btn" %>
  </div>
<% end %>

<%= link_to :back, class:"back-home" do %>
  <div><span class="glyphicon glyphicon-home" aria-hidden="true"></span> マイページに戻る</div>
<% end %>

</div>

