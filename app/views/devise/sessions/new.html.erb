<div class="container login">
  <h2>ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-form">
      <div class="field">
        <div><%= f.label :email, "メールアドレス", class:"field-box" %></div>
        <div><%= f.label :password, "パスワード", class:"field-box" %></div>
      </div>
      <div class="field">
        <div><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"field-box" %></div>
        <div><%= f.password_field :password, autocomplete: "current-password", class:"field-box" %></div>
      </div>
    </div>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div>パスワードをお忘れの方は<%= link_to "こちら", new_password_path(resource_name) %>から</div>
    <% end %>
    <div class="actions">
      <%= f.submit :"ログイン", class:"btn" %>
    </div>
  <% end %>
</div>

